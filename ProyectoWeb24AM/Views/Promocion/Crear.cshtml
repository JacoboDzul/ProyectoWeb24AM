@model ProyectoWeb24AM.Models.Entities.Promocion

@{
    Layout = "_LayoutDashboard";
}

<h1>Nueva Promoción</h1>

<form asp-action="Crear" asp-controller="Promocion" method="post">
    <div class="form-group">
        <label asp-for="Descuento">Descuento (%)</label>
        <input asp-for="Descuento" class="form-control" />
        <span asp-validation-for="Descuento" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="FechaInicio">Fecha de Inicio</label>
        <input asp-for="FechaInicio" type="date" class="form-control" />
        <span asp-validation-for="FechaInicio" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="FechaFin">Fecha de Fin</label>
        <input asp-for="FechaFin" type="date" class="form-control" />
        <span asp-validation-for="FechaFin" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="control-label">Articulo</label>
        <select asp-for="FkArticulo" asp-items="ViewBag.Articulo" class="select2-placeholder-multiple form-control">
            <option value="">-- Selecciona --</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Guardar</button>
</form>
